{
    "name": "RN-Expo-API",
    "dockerFile": "Dockerfile",
    "features": {
      // (optional) add Postgres if you switch away from SQLite
      // "ghcr.io/devcontainers/features/postgres:1": {}
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
  
    // Forward the same ports your code already uses
    "portsAttributes": {
      "8081":  { "label": "Metro" },
      "19000": { "label": "Expo Dev Server" },
      "19001": { "label": "Expo WebSocket" },
      "19002": { "label": "Expo Web UI" },
      "4000":  { "label": "Express API" }
    },
  
    // Run our helper script that does:
    //  • npm install (root)
    //  • npm install & prisma generate (backend)
    //  • npm install (sturzdoku/sturzdoku)
    "postCreateCommand": "bash .devcontainer/postCreate.sh",
  
    // Helpful VS Code extensions inside the container
    "customizations": {
      "vscode": {
        "extensions": [
          "msjsdiag.vscode-react-native",
          "prisma.prisma",
          "esbenp.prettier-vscode",
          "dbaeumer.vscode-eslint"
        ]
      }
    }
  }
  